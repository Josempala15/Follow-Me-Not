<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Image Website</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .screen {
            display: none;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
        }
        #main-screen {
            display: flex;
            cursor: pointer;
        }
        img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <!-- Main Screen -->
    <div id="main-screen" class="screen">
        <img id="uploaded-image" alt="Click to go to the next screen">
    </div>

    <!-- Secondary Screen -->
    <div id="secondary-screen" class="screen">
        <button onclick="alert('Button Pressed!')">Press Me</button>
    </div>

    <!-- File Upload Section -->
    <input type="file" id="image-upload" accept="image/*" style="display: block; margin: 20px auto;">

    <script>
        const imageUpload = document.getElementById('image-upload');
        const mainScreen = document.getElementById('main-screen');
        const secondaryScreen = document.getElementById('secondary-screen');
        const uploadedImage = document.getElementById('uploaded-image');

        // Show uploaded image on the main screen
        imageUpload.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    uploadedImage.src = e.target.result;
                    mainScreen.style.display = 'flex';
                };
                reader.readAsDataURL(file);
            }
        });

        // Navigate to the secondary screen on image click
        mainScreen.addEventListener('click', () => {
            mainScreen.style.display = 'none';
            secondaryScreen.style.display = 'flex';
        });
    </script>
</body>
</html>
